# Challenge 1
def hitung_total(harga, jumlah, diskon=0 ):
    total_harga = harga * jumlah
    if diskon > 0:
        potongan = total_harga * (diskon / 100)
        total_harga -= potongan
        return total_harga
    
    try:
        harga_barang = float(input("Masukkan harga barang: "))
        jumlah_barang = int(input("Masukkan jumlah barang: "))
        diskon_persen = float(input("Masukkan diskon (%): "))

        total_belanja = hitung_total(harga_barang, jumlah_barang, diskon_persen)
        print(f"Total belanja = {int(total_belanja)}")

    except ValueError:
        print("Input tidak valid. Silakan masukkan angka yang benar.") 


